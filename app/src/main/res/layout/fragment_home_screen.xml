<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.HomeScreenFragment"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/outer"
        android:orientation="vertical"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="342dp"
            android:layout_height="336dp"
            android:background="@drawable/round1"
            android:orientation="vertical"
            android:paddingLeft="70dp"
            android:paddingTop="24dp"
            android:paddingRight="70dp"
            android:paddingBottom="10dp"
            android:gravity="center"

            >

            <androidx.appcompat.widget.AppCompatImageView
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                app:srcCompat="@drawable/xo" />

            <Button
                android:id="@+id/home_start_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/start_game"
                android:textAlignment="center"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/leaderboardhomescreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:padding="8dp"
                android:src="@drawable/leaderboard_icon" />

        </LinearLayout>
    </LinearLayout>

</layout>
